# === Application Settings ===
APP_NAME="Social Media Agent Backend"
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=true              # Set to false in production

# === API Configuration ===
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# === API Keys ===
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...your-openai-api-key...

# Get your SerpAPI key from: https://serpapi.com/manage-api-key
SERP_API_KEY=...your-serpapi-key...

# === Database Configuration ===
# Notion integration token from: https://www.notion.so/my-integrations
NOTION_TOKEN=secret_...your-notion-integration-token...

# Notion database ID (extract from your database URL)
# Example: https://notion.so/myworkspace/241d09b1f99680c0bd58eadea3b1aee5 â†’ 241d09b1f99680c0bd58eadea3b1aee5
NOTION_DATABASE_ID=...your-notion-database-id...

# === Redis Configuration ===
# For local development (after running: brew services start redis)
REDIS_URL=redis://localhost:6379

# For production, use your Redis provider URL:
# Railway: redis://default:password@containers-us-west-123.railway.app:6379
# Redis Cloud: redis://default:password@redis-12345.c1.us-east-1-2.ec2.cloud.redislabs.com:12345
# Upstash: redis://default:password@usw1-pleased-eagle-32345.upstash.io:32345

REDIS_TTL=3600  # Cache TTL in seconds (1 hour)

# === API Security ===
# Secret key for authenticating requests from MCP server
# This should match BACKEND_API_KEY in MCP server config
API_SECRET_KEY=  # https://www.random.org/

# === CORS Configuration ===
# Only needed if frontend makes direct browser requests to API
# For MCP server (server-to-server), CORS is not required
# Default: allow localhost for testing web interfaces
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# === Rate Limiting ===
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_IP=10

# === OpenAI Configuration ===
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30  # Timeout in seconds

# === Logging ===
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5